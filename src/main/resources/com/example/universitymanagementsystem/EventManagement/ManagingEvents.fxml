<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="contentPane" prefHeight="500.0" prefWidth="850.0" style="-fx-background-color: #fdd1b2; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.universitymanagementsystem.EventManagement.ManagingEventsController">

    <children>

        <!-- Header Title -->
        <Text layoutX="30.0" layoutY="40.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #2b2b2b;" text="Event Management" />

        <!-- Back Button -->
        <Button layoutX="690.0" layoutY="20.0" onAction="#launchEventManagement" style="-fx-background-color: #d3d3d3; -fx-font-weight: bold; -fx-background-radius: 10;" text="Back to Events" />

        <!-- Add New Event Section -->
        <Text layoutX="30.0" layoutY="80.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add New Event" />

        <TextField fx:id="eventTitle" layoutX="30.0" layoutY="100.0" promptText="Event Title" style="-fx-background-radius: 10; -fx-padding: 8;" />

        <TextArea fx:id="eventDescription" layoutX="30.0" layoutY="140.0" prefHeight="80.0" prefWidth="300.0" promptText="Event Description" style="-fx-background-radius: 10; -fx-padding: 8;" />

        <TextField fx:id="eventDateTime" layoutX="30.0" layoutY="230.0" promptText="Date (e.g., 5th March 2025)" style="-fx-background-radius: 10; -fx-padding: 8;" />

        <Button layoutX="30.0" layoutY="270.0" onAction="#addEvent" style="-fx-background-color: #c21807; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 5 15;" text="Add Event" />

        <!-- Delete Event Section -->
        <Text layoutX="27.0" layoutY="329.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Delete Event" />

        <ComboBox fx:id="deleteEventComboBox" layoutX="29.0" layoutY="340.0" promptText="Select Event" style="-fx-background-radius: 10; -fx-padding: 5;" />

        <Button layoutX="30.0" layoutY="380.0" onAction="#deleteEvent" style="-fx-background-color: #e53935; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 5 15;" text="Delete Event" />

        <!-- Edit Event Section -->
        <Text layoutX="400.0" layoutY="80.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Edit Event" />

        <ComboBox fx:id="eventComboBox" layoutX="400.0" layoutY="100.0" promptText="Select Event" style="-fx-background-radius: 10; -fx-padding: 5;" />

        <TextField fx:id="newTitle" layoutX="400.0" layoutY="140.0" promptText="New Title" style="-fx-background-radius: 10; -fx-padding: 8;" />

        <TextArea fx:id="newDescription" layoutX="400.0" layoutY="180.0" prefHeight="80.0" prefWidth="300.0" promptText="New Description" style="-fx-background-radius: 10; -fx-padding: 8;" />

        <Button layoutX="400.0" layoutY="270.0" onAction="#updateEvent" style="-fx-background-color: #c21807; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 5 15;" text="Update Event" />

        <!-- Image Upload Section -->
        <Text layoutX="398.0" layoutY="346.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Upload New Header Image" />

        <Button layoutX="398.0" layoutY="362.0" onAction="#uploadImage" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 5 15;" text="Upload Image" />

        <ImageView fx:id="imagePreview" fitHeight="80.0" fitWidth="100.0" layoutX="520.0" layoutY="320.0" style="-fx-border-color: #555; -fx-border-width: 1; -fx-border-radius: 5;" />

    </children>
</AnchorPane>
